{
  "name": "e621-horizon",
  "version": "1.0.0",
  "description": "A modern desktop application for browsing e621.net",
  "author": "E621 Horizon Team",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@genkit-ai/core": "^0.5.0",
    "@genkit-ai/flow": "^0.5.0",
    "@genkit-ai/googleai": "^0.5.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.441.0",
    "next": "^15.5.4",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "eslint": "8.57.0",
    "eslint-config-next": "^15.5.4",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.e621horizon.app",
    "productName": "E621 Horizon",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "dir",
      "sign": false,
      "signingHashAlgorithms": []
    },
    "portable": {
      "artifactName": "E621-Horizon-${version}-portable.exe"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "forceCodeSigning": false
  }
}
